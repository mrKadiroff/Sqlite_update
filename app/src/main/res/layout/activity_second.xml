<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <Toolbar
        android:id="@+id/talbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#66D6EF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add movie"
            android:textSize="30sp"
            android:textColor="@color/white"/>


    </Toolbar>

    <EditText
        android:id="@+id/ism"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/edit_text_background"
        android:hint="Movie name"
        android:paddingStart="20dp"
        android:textStyle="normal"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/talbar"
        app:layout_constraintVertical_bias="0.05"
        tools:layout_editor_absoluteX="40dp" />

    <EditText
        android:id="@+id/telRaqam"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/edit_text_background"
        android:hint="Movie Authors"
        android:paddingStart="20sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ism"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintVertical_bias="0.02"
        tools:layout_editor_absoluteX="40dp" />


    <EditText
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:background="@drawable/edit_text_background"
        android:hint="about novie"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingStart="20sp"
        android:layout_marginStart="40dp"
        android:textStyle="normal"
        android:fontFamily="@font/roboto"
        android:layout_marginEnd="40dp"
        app:layout_constraintVertical_bias="0.03"

        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telRaqam"
        tools:layout_editor_absoluteX="40dp" />


    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/edit_text_background"
        android:hint="movie date"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintVertical_bias="0.04"
        android:paddingStart="20dp"
        android:textStyle="normal"
        android:fontFamily="@font/roboto"
        android:inputType="date"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about"

        tools:layout_editor_absoluteX="40dp" />


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#66D6EF"
        android:text="Save"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintVertical_bias="0.07999998" />

