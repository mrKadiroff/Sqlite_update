<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <EditText
        android:id="@+id/ism"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/edit_text_background"
        android:hint="Kontakt nomi"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998"
        tools:layout_editor_absoluteX="40dp" />

    <EditText
        android:id="@+id/telRaqam"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/edit_text_background"
        android:hint="Kontakt raqami"
        android:paddingStart="20sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/black"
        android:inputType="phone"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ism"
        app:layout_constraintVertical_bias="0.060000002"
        tools:layout_editor_absoluteX="40dp" />


    <EditText
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/edit_text_background"
        android:hint="about novie"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingStart="20sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"

        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telRaqam"
        app:layout_constraintVertical_bias="0.060000002"
        tools:layout_editor_absoluteX="40dp" />


    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/edit_text_background"
        android:hint="movie date"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about"
        app:layout_constraintVertical_bias="0.07999998"
        tools:layout_editor_absoluteX="40dp" />


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Kontakt qo'shish"
        android:textAllCaps="false"
        android:backgroundTint="#ED7272"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintVertical_bias="0.07999998" />

